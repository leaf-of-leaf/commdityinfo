    <select id="findItemByitemIdForUpdate" parameterType="int">
        select
        <include refid="Base_Column_List"/>
        from item
        where item_id = #{id}
        for update
    </select>

    <update id="updateItemByitemIdAndNum">
        update item
        set num = num + #{num}
        where item_id = #{id}
    </update>
</mapper>